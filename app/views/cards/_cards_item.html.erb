<div class="container">
<h1>Cards</h1>
<br>
<br>
<% @order_items.each do |item| %>

    <h3><%= item.product.name %></h3>
    <h5><%= number_to_indian_currency(item.product.price) %></h5>
    
    <br>

    <%= form_for item, remote: true do |f| %>



        <%= f.hidden_field :product_id, :value => item.product.id %>
        <%= f.number_field :quantity, :value => item.quantity.to_i, min: 1 %>
        <%= f.submit "Update Card ", class: "btn btn-primary btn-sm"%>
        <%= link_to "Remove Item", order_item_path(item), method: :delete, remote: true , class: "btn btn-danger btn-sm" %>

    <% end %>
    <br>
    <!--<h2>Subtotal: <%= item.total %></h2>-->
<br>
<% end %>




<h3>Your current number of items are: <%= current_order.subtotal %></h3>
<br>
</div>