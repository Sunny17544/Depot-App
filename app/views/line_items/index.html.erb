<div class="container">
<h1>Line items</h1>
<p id="notice"><%= notice %></p>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %>
        <td><%= number_to_indian_currency(product.price) %></td>
        <td><%= link_to 'Show', shop_path(product), class: "btn btn-primary btn-sm"  %></td>
        
        
         <td>
          <%= form_for @order_item, remote: true do |f|%>
          <%= f.hidden_field :product_id, :value => product.id %>
          <%= f.number_field :quantity, :value => 1, :min =>  1%>
          <th><%= f.submit "Add to Cart", class: "btn btn-warning btn-sm" %></th>
          <% end %>
        </td>



        </tr>
    <% end %>
  </tbody>
</table>

<br>
<div id="card">
  <%= render 'cards/card'%>
</div>
<%#= link_to "#{current_order.order_items.size} items with a value of #{current_order.subtotal}$", cards_path %>
</div>