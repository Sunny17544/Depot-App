<div class="card" position="center">
  <div class="card-body">
<%= form_with(model: checkout) do |form| %>
  <% if checkout.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(checkout.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% checkout.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= form.label :address %><br>
    <%= form.text_area :address %>
  </div>
  <div class="field">
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>
<br>
  <div class="field">
    <%= form.label :pay_type %><br>
    <%= form.select :pay_type, Checkout.pay_types.keys, prompt: 'Select a payment method'  %>
  </div>
  <br> 

<%= link_to 'Back', checkouts_path, class: "btn btn-secondary btn-sm" %>
<br><br>
<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          
          data-locale="auto">
</script>
<% end %>   
</div>
</div>